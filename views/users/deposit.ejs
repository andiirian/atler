    <!-- Main content -->
    <section class="content">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        
        <div class="col-md-6">
             <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Quick Example</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="" method="POST" id="deposit">
              <div class="box-body">
                    <div class="form-group required">
                            <label>Amount</label>
                            <select id="amount" name="amount" class="form-control">
                              <option value="">Pilih</option>
                              <option value="3200000">$200</option>
                              <option value="8000000">$500</option>
                              <option value="16000000">$1000</option>
                              <option value="32000000">$2000</option>
                              <option value="80000000">$5000</option>
                              <option value="160000000">$10000</option>
                            </select>
                            <label id="pesan" style="color: red;">This field is required.</label>
                          </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Bank</label>
                  <input type="text" class="form-control" id="exampleInputEmail1" value="Bank BRI" disabled>
                </div>
                
               
                
              </div>
              <!-- /.box-body -->

