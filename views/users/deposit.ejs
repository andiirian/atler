<script>
  
        $(function () {
          $('#example1').DataTable()
          $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
          })
          $("#pesan").hide()
          $('#deposit').submit(function() {
		        	var amount = $('#amount').val().length;			
 
		        	if (amount == 0 ) {				
		        		$("#pesan").show();
		          		return false;
	        		}
	      	});
          
        })
      </script>
