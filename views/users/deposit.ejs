    <section class="content">
      <div class="row">
          <div class="col-xs-12">
                  <div class="box">
                          <div class="box-header">
                            <h3 class="box-title">Deposit List</h3>
                          </div>
                          <!-- /.box-header -->
                          <div class="box-body">
                            <table id="example2" class="table table-bordered table-hover">
                              <thead>
                              <tr>
                                <th>Tx Id</th>
                                <th>Next Profit</th>
                                <th>Expired Date</th>
                                <th>Plan</th>
                                <th>Status</th>
                              </tr>
                              </thead>
                              <tbody>
                                <%result.forEach(function(items){%>

                                
                                  <tr>
                                      <td><%=items.tx_id%></td>
                                      
                                      
                                      <%if(items.status == 0){%>
                                        <td></td>
                                        <td></td>
                                        <td><%=items.investasi.toLocaleString()%></td>
                                        <td><a href="payment-confirm/<%=items.tx_id%>">Confirm</a></td>
                                        <%}else if(items.status == 1){%>
                                          <td></td>
                                          <td></td>
                                          <td><%=items.investasi.toLocaleString()%></td>
                                          <td><span class="label label-warning">Waiting Confirm</span></td>
                                          <%}else if(items.status == 2){%>
                                            <td><%=items.date%>
                                            </td>
                                            <td><%=items.jatuh_tempo%></td>
                                            <td><%=items.investasi.toLocaleString()%></td>
                                            <td><span class="label label-info">Running</span></td>
                                            <%}else if(items.status == 3){%>
                                              <span class="label label-danger">Failed</span>
                                              <%}else{%>
                                                <td>Expired</td>
      
                                                <td>Expired</td>
                                                <td><%=items.investasi.toLocaleString()%></td>
                                                <td>Expired</td>
                                                <%}%>
                                    </tr>
                              <%})%>
                             
                              
                              
                             
                              
                              
                              </tbody>
                              <tfoot>
                                      <tr>
                                              <th>Tx Id</th>
                                <th>Next Profit</th>
                                <th>Expired Date</th>
                                <th>Plan</th>
                                <th>Status</th>
                                            </tr>
                              </tfoot>
                            </table>
                          </div>
                          <!-- /.box-body -->
                        </div>
